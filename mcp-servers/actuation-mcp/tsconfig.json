{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "../../node_modules/@types",
      "../../node_modules"
    ]
  },
  "include": ["src"]
}
